<resources>
    <style name="parent">
        <item name="android:textAlignment">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="title">
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="line">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="txtBox">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="spinner">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">#2dbf29</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="seekBar">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:max">100000</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="seekBarResult">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#2dbf29</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="buttonSubmit">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#2dbf29</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>





    <style name="resulTxtbox">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#2dbf29</item>
    </style>

    <style name="txtBoxGreen">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#2dbf29</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">textStart</item>
    </style>
</resources>

